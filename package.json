{
  "name": "suddzzColor",
  "version": "1.0.1",
  "description": "A tinyColor wrapper for easier use in applications",
  "main": "dist/bundle.js",
  "module": "dis/bundle.esm.js",
  "author": "Ian Sudderth",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iansudderth/suddzzColor"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "parser": "babylon",
    "semi": true,
    "tabWidth": 2
  },
  "scripts": {
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test-full": "jest --coverage --verbose",
    "test-changed": "jest --onlyChanged",
    "test-watch": "jest --watch",
    "build": "rollup -c",
    "dev": "rollup -c -w"
  },
  "pre-commit":["build"],
  "dependencies": {
    "lodash": "^4.17.4",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-latest": "^6.24.1",
    "eslint-config-prettier": "^2.6.0",
    "jest": "^21.2.1",
    "pre-commit": "^1.2.2",
    "rollup-plugin-babel": "^3.0.2"
  }
}
